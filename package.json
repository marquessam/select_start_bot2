{
  "name": "select-start-bot2",
  "version": "1.0.0",
  "description": "Discord bot for RetroAchievements community challenges",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "timeout 120s node src/index.js || node src/index.js",
    "dev": "nodemon src/index.js",
    "deploy": "node src/deploy-commands.js",
    "predeploy": "echo 'Pre-deploy check complete'",
    "postdeploy": "echo 'Deployment completed'",
    "tester": "node src/test/runTests.js",
    "test": "node src/test/cli.js",
    "test:profile": "node src/test/cli.js profile",
    "test:leaderboard": "node src/test/cli.js leaderboard monthly",
    "test:leaderboard:monthly": "node src/test/cli.js leaderboard monthly",
    "test:leaderboard:yearly": "node src/test/cli.js leaderboard yearly",
    "test:arcade": "node src/test/cli.js arcade 1234",
    "test:nominations": "node src/test/cli.js nominations",
    "test:achievements": "node src/test/cli.js achievements TestUser",
    "test:scenario": "node src/test/cli.js scenario",
    "test:setup": "node src/test/setupTestDb.js",
    "health": "node -e \"console.log('Health check passed')\"",
    "validate": "node -e \"import('./src/config/config.js').then(({validateConfig}) => validateConfig())\""
  },
  "keywords": [
    "discord",
    "bot",
    "retroachievements",
    "gaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@retroachievements/api": "^1.3.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2"
  }
}
